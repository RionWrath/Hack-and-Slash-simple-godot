[sub_resource type="GDScript" id="GDScript_od3ui"]
script/source = "# CameraController.gd
extends SpringArm3D

@export var mouse_sensitivity: float = 0.25

var _mouse_input: Vector2 = Vector2.ZERO

func _ready() -> void:
	# Kunci dan sembunyikan kursor mouse saat game dimulai
	Input.mouse_mode = Input.MOUSE_MODE_CAPTURED

func _input(event: InputEvent) -> void:
	# Toggle untuk membebaskan/mengunci kursor mouse dengan tombol Esc
	if event.is_action_pressed(\"ui_cancel\"):
		if Input.get_mouse_mode() == Input.MOUSE_MODE_CAPTURED:
			Input.mouse_mode = Input.MOUSE_MODE_VISIBLE
		else:
			Input.mouse_mode = Input.MOUSE_MODE_CAPTURED

func _unhandled_input(event: InputEvent) -> void:
	# Tangkap gerakan mouse jika kursor terkunci
	if event is InputEventMouseMotion and Input.get_mouse_mode() == Input.MOUSE_MODE_CAPTURED:
		_mouse_input = event.relative

func _physics_process(delta: float) -> void:
	# Rotasi horizontal (mengorbit player) pada sumbu Y
	rotate_y(deg_to_rad(-_mouse_input.x * mouse_sensitivity))
	# Rotasi vertikal (tilt atas/bawah) pada sumbu X
	rotate_x(deg_to_rad(-_mouse_input.y * mouse_sensitivity))
	# Batasi rotasi vertikal agar kamera tidak terbalik
	rotation.x = clamp(rotation.x, deg_to_rad(-60), deg_to_rad(45))
	
	_mouse_input = Vector2.ZERO
"

